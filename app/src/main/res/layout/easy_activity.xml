<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="#F5F5DD"
    >
    <TextView
        android:layout_width=".5in"
        android:layout_height="wrap_content"
        android:text="Total Clicks:"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop=".1in"
        android:id="@+id/ScoreTXT"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height=".5in"
        app:layout_constraintEnd_toEndOf="@id/ScoreTXT"
        app:layout_constraintStart_toStartOf="@id/ScoreTXT"
        app:layout_constraintTop_toBottomOf="@id/ScoreTXT"
        android:gravity="center"
        android:id="@+id/ClickCount"
        android:text="0"
        android:textSize="64sp"
        >
    </TextView>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GridLayout"
        app:layout_constraintTop_toBottomOf="@id/ClickCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        >

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>