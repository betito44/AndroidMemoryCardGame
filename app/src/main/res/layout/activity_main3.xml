<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3" >

    <TextView
        android:layout_width="1in"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/Congrats"
        android:gravity="center"
        android:text="You've won with a score of"
        app:layout_constraintVertical_bias=".3"
        >
    </TextView>

    <TextView
        android:layout_width="1in"
        android:layout_height=".5in"
        app:layout_constraintTop_toBottomOf="@id/Congrats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/CongratsScore"
        android:gravity="center"
        android:textSize="64sp"
        android:textColor="@color/black"
        >
    </TextView>

    <Button
        android:layout_width="1in"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/CongratsScore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias=".3"
        android:id="@+id/PlayAgain"
        android:gravity="center"
        android:onClick="PlayAgain"
        android:text="Play Again"
        >
    </Button>

    <Button
        android:layout_width="1in"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/CongratsScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".3"
        android:id="@+id/ExitGame"
        android:gravity="center"
        android:onClick="ExitGame"
        android:text="Exit"
        >
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>